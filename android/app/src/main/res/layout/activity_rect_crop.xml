<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next, crop your profile photo"
            android:textColor="@color/pink"
            android:fontFamily="@font/bogle_bold"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is what shows up when people find you"
            android:textColor="@color/grey"
            android:fontFamily="@font/bogle_regular"
            android:textSize="14dp"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="matrix"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/overlapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/overlay_rect"/>

        <LinearLayout
            android:id="@+id/layCropper"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:orientation="horizontal"/>


    </FrameLayout>

    <!--<ImageView-->
    <!--android:id="@+id/imgRef"-->
    <!--android:scaleType="matrix"-->
    <!--android:src="@drawable/trans"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            app:srcCompat="@drawable/ic_image_black_24dp"/>

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekZoomController"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:secondaryProgressTint="@color/grey"
            android:progressTint="@color/grey"
            android:progress="3"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:srcCompat="@drawable/ic_image_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/btnCancel"
            android:layout_width="89dp"
            android:layout_height="40dp"
            android:layout_margin="18dp"
            android:gravity="center"
            android:background="@drawable/btn_cancel"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bogle_regular"
                    android:text="Back"
                    android:textColor="@color/blue"
                    android:textSize="14dp"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnDone"
            android:layout_width="89dp"
            android:layout_height="40dp"
            android:layout_margin="18dp"
            android:background="@drawable/btn_done"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bogle_regular"
                android:text="Next"
                android:textColor="@color/blue"
                android:textSize="14dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <!-- <ImageView
        android:id="@+id/imgViewCropped"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"/> -->

</LinearLayout>