<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First, crop your avatar"
            android:textColor="@color/pink"
            android:fontFamily="@font/bogle_bold"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="This is what shows up when people search for you"
            android:textColor="@color/grey"
            android:fontFamily="@font/bogle_regular"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="matrix"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/overlapView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="fitXY"
            android:src="@drawable/overlay"/>

        <LinearLayout
            android:id="@+id/layCropper"
            android:layout_width="@dimen/_117sdp"
            android:layout_height="@dimen/_117sdp"
            android:layout_gravity="center"
            android:orientation="horizontal"/>


    </FrameLayout>

    <!--<ImageView-->
    <!--android:id="@+id/imgRef"-->
    <!--android:scaleType="matrix"-->
    <!--android:src="@drawable/trans"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            app:srcCompat="@drawable/ic_image_black_24dp"/>

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekZoomController"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:secondaryProgressTint="@color/grey"
            android:progressTint="@color/grey"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:srcCompat="@drawable/ic_image_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_5sdp">

        <android.support.v7.widget.CardView
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_margin="@dimen/_5sdp"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardElevation="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/bogle_regular"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btnDone"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_5sdp"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardElevation="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/bogle_regular"
                    android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgViewCropped"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"/>

</LinearLayout>